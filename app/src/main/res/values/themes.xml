<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WatchKart" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_bg_color</item>
        <item name="colorPrimaryVariant">@color/app_bg_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_bg_color</item>
        <item name="colorSecondaryVariant">@color/app_bg_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowDisablePreview">true</item>
    </style>


    <!-- Splash Screen Theme (API >= 31) -->
    <style name="Theme.App.Starting" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- The splash screen background, animated icon, and animation duration -->
        <item name="windowSplashScreenBackground">@color/app_bg_color</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.WatchKart</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
    <style name="AppTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/font_assassin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="AppEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
    </style>

    <style name="LoaderTransparentDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">75</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AddAddressScreenEditTextStyle">
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/app_bg_color</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/app_bg_color</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>